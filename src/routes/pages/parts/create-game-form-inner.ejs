<form class="container-fluid" action="/api/game" method="post" enctype="multipart/form-data">
    <legend>Создание игры</legend>
    <% if (type === 'MULTIPLAYER') { %>
    <div class="form-group row">
        <label class="col-sm-2">Название игры</label>
        <div class="col-sm-10">
            <input id="name" name="name" class="form-control" type="text" maxlength="100" required
                   autofocus/>
        </div>
    </div>
    <% } %>
    <div class="form-group row">
        <label class="col-sm-2">Скорость</label>
        <div class="col-sm-10">
            <label><input name="speed" type="radio" value="1"/> 1</label>
            <label><input name="speed" type="radio" value="2"/> 2</label>
            <label><input name="speed" type="radio" value="3"/> 3</label>
            <label><input name="speed" type="radio" value="4" checked/> 4</label>
            <label><input name="speed" type="radio" value="5"/> 5</label>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2">Правила</label>
        <div class="col-sm-10">
            <label for="rule"><input id="rule" name="rule" type="checkbox" value="1" checked/> Учитывать
                границы</label>
        </div>
    </div>
    <input type="hidden" name="type" value="<%= type %>"/>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Добавить</button>
    </div>
</form>
