<html>
<head lang="en">
    <% include parts/head %>
    <title><%= title %></title>
</head>
<body>



<div class="container">
    <div class="row">
        <div class="col">

            <h1><%= clientName %></h1>

            <form action="/switch" enctype="application/x-www-form-urlencoded" method="post">
                <legend>Тип игры</legend>
                <div class="form-group">
                    <label><input name="type" type="radio" value="single"> Одиночная</label>
                </div>
                <div class="form-group">
                    <label><input name="type" type="radio" value="multiplayer" checked> Мультиплеер</label>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Отправить</button>
                </div>
            </form>
        </div>
    </div>
</div>
</body>
</html>