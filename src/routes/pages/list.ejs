<html>
<head lang="en">
    <% include parts/head %>
    <title><%= title %></title>
</head>
<body>

<% include parts/connect %>

<div class="container">
    <div class="row">
        <div class="col">
            <h1><%= clientName %></h1>
        </div>
    </div>
    <div id="app" class="row">
        <div class="col">
            <form action="/api/game" method="post" enctype="multipart/form-data">
                <legend>Создание игры</legend>
                <div class="form-group row">
                    <label for="name" class="col-sm-2 col-form-label">Название игры</label>
                    <div class="col-sm-10">
                        <input id="name" name="name" class="form-control" type="text" maxlength="100" required autofocus/>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Добавить</button>
                </div>
            </form>

            <div id="games"></div>
        </div>
    </div>
</div>

<script type="text/javascript" src="/polyfills.bundle.js"></script>
<script type="text/javascript" src="/<%= name %>.bundle.js"></script>
</body>
</html>