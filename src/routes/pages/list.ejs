<html>
<head lang="en">
    <% include parts/head %>
    <title><%= title %></title>
</head>
<body>

<% include parts/connect %>

<div class="container-fluid">
    <div class="row">
        <div class="col">
            <h1><%= clientName %></h1>
        </div>
    </div>
    <div id="app" class="row">
        <div class="col-md-6">
            <form class="container-fluid" action="/api/game" method="post" enctype="multipart/form-data">
                <legend>Создание игры</legend>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Название игры</label>
                    <div class="col-sm-10">
                        <input id="name" name="name" class="form-control" type="text" maxlength="100" required
                               autofocus/>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Скорость</label>
                    <div class="col-sm-10">
                        <label><input name="speed" type="radio" value="1"/>1</label>
                        <label><input name="speed" type="radio" value="2"/>2</label>
                        <label><input name="speed" type="radio" value="3"/>3</label>
                        <label><input name="speed" type="radio" value="4" checked/>4</label>
                        <label><input name="speed" type="radio" value="5"/>5</label>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Правила</label>
                    <div class="col-sm-10">
                        <label for="rule"><input id="rule" name="rule" type="checkbox" value="1" checked/>Учитывать
                            границы</label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Добавить</button>
                </div>
            </form>
        </div>
        <div class="col-md-6">
            <div id="games"></div>
        </div>
    </div>
</div>

<script type="text/javascript" src="/polyfills.bundle.js"></script>
<script type="text/javascript" src="/<%= name %>.bundle.js"></script>
</body>
</html>
